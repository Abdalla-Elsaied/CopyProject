@model CompanyVm
@{
    ViewData["Title"] = "Edit";
}

<h1> Edit Company</h1>

<form asp-action="SaveEdit" method="post" asp-route-id="@Model.Id">
    <div asp-validation-summary="All" ></div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control"  value="@Model.Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-check">
        <input asp-for="IsActive" class="form-check-input"  value="@Model.IsActive" />
        <label class="col-form-label" asp-for="IsActive"></label>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input asp-for="Email" class="form-control"  value="@Model.Email" readonly/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Password"></label>
        <input asp-for="Password" class="form-control"  value="@Model.Password"  readonly/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mt-4">
        <input type="submit" value="Create" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-light">Back To List</a>
    </div>
</form>